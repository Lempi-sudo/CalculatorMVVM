<Window x:Class="Calculator.View.WindowCalculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.View"
        mc:Ignorable="d"
        Title="WindowCalculator" Height="450" Width="800">
    <Grid>
        <TextBox Text="{Binding Path=SynchronizedText, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" />
        <TextBox HorizontalAlignment="Left" Height="23" Margin="181,113,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Text="{Binding Path=First, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" />
        <TextBox HorizontalAlignment="Left" Height="23" Margin="181,157,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Text="{Binding Path=Second, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" />
    </Grid>
</Window>
